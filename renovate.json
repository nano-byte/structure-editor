{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["gittools", "Test", "Assert", "Mock", "[Xx]unit", "Moq"],
      "groupName": "Testing deps",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["^NanoByte\\.Common"],
      "groupName": "NanoByte.Common",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["SourceLink"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["System.Resources.Extensions"],
      "enabled": false
    }
  ]
}
